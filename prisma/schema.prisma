generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- Tambahkan Model Contoh di bawah ini agar Database terbentuk ---
model Pendaftar {
  id        Int      @id @default(autoincrement())
  nama      String
  email     String   @unique
  pesan     String?
  createdAt DateTime @default(now())
}